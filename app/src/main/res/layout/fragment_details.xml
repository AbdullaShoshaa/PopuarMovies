<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fedaros.www.popularmovies.DetailsActivityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp" android:id="@+id/movie_cover"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/movie_title"
        android:layout_below="@+id/movie_cover"
        android:text="Title"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/movie_release_date"
        android:layout_below="@id/movie_title"
        android:layout_alignParentRight="true"
        android:text="Release Date: "
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/movie_votes"
        android:layout_below="@+id/movie_release_date"
        android:layout_alignParentRight="true"
        android:text="Vote Rate: "
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/movie_overview"
        android:layout_below="@+id/movie_votes"
        android:layout_alignParentRight="true"
        android:text="Overview: "
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />



    </RelativeLayout>

</ScrollView>
